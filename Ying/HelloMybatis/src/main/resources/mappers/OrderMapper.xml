<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ying.mapper.OrderMapper">

    <resultMap id="OrderUserResultMap" type="com.ying.bean.Order" autoMapping="true">
        <id column="id" property="id"/>

        <association property="user" javaType="com.ying.bean.User" autoMapping="true">
            <id column="user_id" property="id"/>
        </association>
    </resultMap>

    <select id="queryOrderWithUserByOrderNumber" resultMap="OrderUserResultMap">
        select
          *
        from
          tb_order o left join tb_user u on o.user_id=u.id
        where
          o.order_number = #{number}
    </select>

    <resultMap id="OrderUserDetailResultMap" type="com.ying.bean.Order" autoMapping="true">
        <id column="id" property="id"/>

        <association property="user" javaType="com.ying.bean.User" autoMapping="true">
            <id column="user_id" property="id"/>
        </association>

        <collection property="detailList" javaType="List" ofType="com.ying.bean.OrderDetail">
            <id column="id" property="id"/>
        </collection>
    </resultMap>

    <select id="queryOrderWithUserAndDetailByOrderNumber" resultMap="OrderUserDetailResultMap">
        select
          *
        from
         tb_order o
         left join tb_user u on o.user_id=u.id
         left join tb_orderdetail od on o.id=od.order_id
        where
          o.order_number = #{number}
    </select>

</mapper>